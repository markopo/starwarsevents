{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="css/user/login.css" />
{% endblock %}

{% block body %}
    <section class="login">
        <article>
            <h1>Register</h1>

            <form action="{{ path('user_register') }}" method="POST">
                <p>{{ form_errors(form) }}</p>

                <p>{{ form_row(form.username,{ 'attr': { 'class': 'a-clever-class' }, 'help' : 'Write a fantastic username!!' }) }}</p>
                <p>{{ form_row(form.email) }}</p>
                <p>{{ form_row(form.plainPassword.first, { label: 'Lösenord' }) }}</p>
                <p>{{ form_row(form.plainPassword.second, { label: 'Lösenord igen' }) }}</p>

                <p>{{ form_rest(form) }}</p>

                <hr/>
                <input type="submit" class="btn btn-primary pull-right" value="Register!" />
            </form>

        </article>
    </section>
{% endblock %}
