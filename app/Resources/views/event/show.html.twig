{% extends 'base.html.twig' %}

{% block body %}
    <h1>Event</h1>

    <table class="table table-bordered" style="background:#fff;">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{% if event.time %}{{ event.time|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ event.location }}</td>
            </tr>
            <tr>
                <th>Host</th>
                <td>{{ event.owner.username }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ event.details }}</td>
            </tr>
            <tr>
                <td colspan="2">
                    <h3>{{ event.attendees|length }} attending!</h3>
                    <ul class="users">
                      {% for attendee in event.attendees %}
                        <li>{{ attendee }}</li>
                      {% else %}
                        <li>We're cool! RSVP!</li>
                      {% endfor %}
                    </ul>

                    {% if event.hasAttendee(app.user) %}
                        <a href="{{ path('event_unattend', { id: event.id }) }}" class="btn btn-warning btn-xs">
                           Oh no! I can't go anymore!
                        </a>
                    {%  else %}
                        <a href="{{ path('event_attend', { id: event.id }) }}" class="btn btn-success btn-xs">
                            I want to go!!
                        </a>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('event_index') }}">Back to the list</a>
        </li>
        {% if app.user == event.owner %}
            <li>
                <a href="{{ path('event_edit', { 'slug': event.slug }) }}">Edit</a>
            </li>

            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        {% endif %}
    </ul>
{% endblock %}
