{% extends 'base.html.twig' %}

{% block body %}
    <h1>Event list</h1>

    <table class="table table-bordered" style="background:#fff;border-radius:3px;" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Time</th>
                <th>Location</th>
                <th>Details</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td><a href="{{ path('event_show', { 'id': event.id }) }}">{{ event.id }}</a></td>
                <td>{{ event.name }}</td>
                <td>{% if event.time %}{{ event.time|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ event.location }}</td>
                <td>{{ event.details }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('event_show', { 'id': event.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('event_edit', { 'id': event.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-group">
        <li class="list-group-item">
            <a class="link" href="{{ path('event_new') }}">Create a new entry</a>
        </li>
        <li class="list-group-item">
            <a class="link" href="{{ path('login_form') }}" >Login</a>
        </li>
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <li class="list-group-item">
            <a class="link" href="{{ path('logout') }}" >Logout</a>
        </li>
        {% endif %}
    </ul>
{% endblock %}
